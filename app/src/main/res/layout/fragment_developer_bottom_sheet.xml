<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_horizontal"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        style="@style/CardDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/md_theme_surfaceContainerHigh">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_text"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/developer_header"
                style="@style/CardDetailDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/developers_bottom_sheet_header"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/developer_name"
                style="@style/CardDetailDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Alfonso"
                android:textAlignment="center" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
