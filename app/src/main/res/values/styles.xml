<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Commons Component -->
    <style name="AppHeadlineHeader" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSecondaryContainer</item>
    </style>

    <style name="AppHeadline" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="AppSupportingText" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="AppOverlineText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <!-- Card view list style -->
    <style name="CardListItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:elevation">@dimen/spacing_xs</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/spacing_xs</item>
    </style>

    <style name="CardDetailContainer" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">@dimen/spacing_vertical</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/spacing_xs</item>
    </style>

    <style name="CardMainText">
        <item name="android:textSize">@dimen/spacing_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardSupportingText">
        <item name="android:textSize">@dimen/spacing_horizontal</item>
    </style>

    <style name="CardDetailDescription">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/spacing_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_text</item>
    </style>

</resources>