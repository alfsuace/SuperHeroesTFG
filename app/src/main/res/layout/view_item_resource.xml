<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardListItem"
    android:layout_marginVertical="@dimen/spacing_text"
    android:layout_marginHorizontal="@dimen/spacing_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_text">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardMainText"
            tools:text="Título" />

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardSupportingText"
            tools:text="Subtítulo" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
